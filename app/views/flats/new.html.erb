<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-header">
          <h1>Add a new Flat</h1>
        </div>
        <div class="card-body">
          <%= simple_form_for [@flat] do |f| %>
            <div class="mb-3">
              <%= f.input :name, input_html: { class: 'form-control' }, wrapper: false %>
            </div>
            <div class="mb-3">
              <%= f.input :address, input_html: { class: 'form-control' }, wrapper: false %>
            </div>
            <div class="mb-3">
              <%= f.input :description, input_html: { class: 'form-control' }, wrapper: false %>
            </div>
            <div class="mb-3">
              <%= f.input :price_per_night, input_html: { class: 'form-control' }, wrapper: false %>
            </div>
            <div class="mb-3">
              <%= f.input :number_of_guests, input_html: { class: 'form-control' }, wrapper: false %>
            </div>
            <%= f.submit 'Submit', class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
